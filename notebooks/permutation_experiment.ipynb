
import numpy as np
from sklearn.datasets import load_iris
from src.meta_features.fixed_extractor import FixedMetaFeatureExtractor

# Загружаем Iris датасет
iris = load_iris()
X, y = iris.data, iris.target
extractor = FixedMetaFeatureExtractor()

# Оригинальные мета-признаки
original = extractor.extract(X, y, "original")

# 1. Перемешивание строк
X_rows = X.copy()
np.random.shuffle(X_rows)
rows_shuffled = extractor.extract(X_rows, y, "rows_shuffled")

# 2. Перемешивание столбцов
X_cols = X.copy()
np.random.shuffle(X_cols.T)
cols_shuffled = extractor.extract(X_cols, y, "cols_shuffled")

# 3. Перестановка меток классов
y_perm = y.copy()
unique_classes = np.unique(y)
perm = np.random.permutation(unique_classes)
for old, new in zip(unique_classes, perm):
    y_perm[y == old] = new
labels_permuted = extractor.extract(X, y_perm, "labels_permuted")

# Сравнение
print("Изменения мета-признаков:")
for feature in original:
    if feature in rows_shuffled:
        orig_val = original[feature]
        rows_val = rows_shuffled[feature]
        cols_val = cols_shuffled[feature]
        labels_val = labels_permuted[feature]

        if isinstance(orig_val, (int, float)):
            print(f"\n{feature}:")
            print(f"  Оригинал: {orig_val:.4f}")
            print(f"  Перемеш. строк: {rows_val:.4f} (изм: {rows_val-orig_val:+.4f})")
            print(f"  Перемеш. столбцов: {cols_val:.4f} (изм: {cols_val-orig_val:+.4f})")
            print(f"  Перестановка меток: {labels_val:.4f} (изм: {labels_val-orig_val:+.4f})")
