# correlation_analysis.ipynb

import pandas as pd
import numpy as np
import matplotlib.pyplot as plt
import seaborn as sns
import warnings
warnings.filterwarnings('ignore')

# Настройка стиля
sns.set_style('whitegrid')
plt.rcParams['figure.figsize'] = (14, 10)

# Загружаем мета-набор
print("Загрузка данных...")
meta_df = pd.read_csv('data/processed/meta_features_raw.csv')
print(f"Загружено {meta_df.shape[0]} датасетов с {meta_df.shape[1]} признаками")

# Загружаем результаты оценки алгоритмов
results_df = pd.read_csv('data/processed/algorithm_performance.csv')
print(f"Загружены результаты для {results_df.shape[0]} датасетов")

# Объединяем для получения целевой переменной
meta_dataset = pd.merge(
    meta_df,
    results_df[['dataset_id', 'best_algorithm']],
    on='dataset_id'
)
print(f"Итоговый мета-набор: {meta_dataset.shape[0]} строк × {meta_dataset.shape[1]} колонок")

# Выделяем только мета-признаки (исключаем идентификаторы и целевую переменную)
feature_cols = [c for c in meta_dataset.columns
                if c not in ['dataset_id', 'dataset_name', 'best_algorithm']]
meta_features = meta_dataset[feature_cols]

print(f"\nАнализируем {meta_features.shape[1]} мета-признаков:")
print(list(meta_features.columns))
