# EditorConfig для согласованности стилей кода
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
max_line_length = 100
tab_width = 4
trim_trailing_whitespace = true

[*.{py,ipynb}]
indent_size = 4

[*.{yaml,yml}]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = 0

[*.{csv,json}]
indent_size = 2